{
  "module_name": "hr",
  "display_name": "Human Resources",
  "version": "1.0.0",
  "description": "Human Resources management system for employees, contracts, visas, insurance, and performance reviews",
  "route_prefix": "/api/v1/hr",
  "dependencies": {
    "core": ">=1.3.0",
    "python": ">=3.11"
  },
  "database_collections": [
    "employees",
    "employee_contracts",
    "employee_visas",
    "employee_insurance",
    "employee_performance"
  ],
  "permissions": [
    "hr.view",
    "hr.create",
    "hr.edit",
    "hr.delete"
  ],
  "license_required": false,
  "enabled_by_default": true,
  "core_module": false
}

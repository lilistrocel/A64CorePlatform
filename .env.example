# Application Settings
APP_NAME=A64 Core Platform API Hub
ENVIRONMENT=development
DEBUG=True

# Server Settings
HOST=0.0.0.0
PORT=8000

# CORS Settings (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000,http://127.0.0.1:8000

# Database Settings - MongoDB
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=a64core_db

# Database Settings - MySQL
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your_mysql_password_here
MYSQL_DB_NAME=a64core_db

# Security Settings
SECRET_KEY=change_this_to_a_secure_random_key_in_production
API_KEY_PREFIX=dev_key

# Logging
LOG_LEVEL=INFO

# Admin Credentials (used by cron service)
ADMIN_EMAIL=admin@a64platform.com
ADMIN_PASSWORD=change_this_to_secure_password

# MongoDB Authentication (production)
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=change_this_to_secure_root_password
MONGO_APP_USER=a64core_app
MONGO_APP_PASSWORD=change_this_to_secure_app_password

# Redis Settings (Module Management & Caching)
REDIS_URL=redis://:redispassword@redis:6379/0
REDIS_PASSWORD=redispassword

# Module Management Settings
MODULE_REGISTRY_PATH=config/modules.json
LICENSE_ENCRYPTION_KEY=change-this-to-32-char-key-in-production-please-make-secure
DOCKER_REGISTRY_URL=https://registry.hub.docker.com
DOCKER_REGISTRY_USERNAME=
DOCKER_REGISTRY_PASSWORD=
MAX_MODULES=50
MAX_MODULES_PER_USER=10
MODULE_INSTALL_TIMEOUT=300

# Trusted Docker Registries (comma-separated, for module installation security)
TRUSTED_REGISTRIES=registry.hub.docker.com,ghcr.io,gcr.io,docker.io,localhost

# License Validation Settings
LICENSE_VALIDATION_MODE=format
# LICENSE_SERVER_URL=https://your-license-server.com (optional, for online validation)
# LICENSE_SERVER_API_KEY=your-api-key (optional, for online validation)
